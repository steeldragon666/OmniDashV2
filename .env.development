# Development Environment Configuration
# This file is for local development

# Application
NODE_ENV=development
APP_NAME=OmniDash

# Frontend Configuration
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost:3000

# Backend Configuration  
BACKEND_PORT=3001
BACKEND_URL=http://localhost:3001
API_URL=http://localhost:3001

# Database (PostgreSQL)
DATABASE_URL=postgresql://omnidash:omnidash_dev_password@localhost:5432/omnidash
DB_HOST=localhost
DB_PORT=5432
DB_NAME=omnidash
DB_USER=omnidash
DB_PASSWORD=omnidash_dev_password

# Supabase (Development)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-development-nextauth-secret-minimum-32-chars
JWT_SECRET=your-development-jwt-secret-key

# OAuth Providers (Development)
GOOGLE_CLIENT_ID=your-dev-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-dev-google-client-secret

# API Keys (Development - Use test keys)
OPENAI_API_KEY=sk-test-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-test-your-anthropic-api-key

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs

# Security (Less strict for development)
CORS_ORIGIN=http://localhost:3001
RATE_LIMIT_ENABLED=false
CSRF_ENABLED=false

# Features
SKIP_ENV_VALIDATION=false
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false