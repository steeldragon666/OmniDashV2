# OmniDash V2 - Production Environment Variables
# Copy this file to .env.production and fill in your actual values
# DO NOT commit actual secrets to version control

# ================================================
# CORE APPLICATION SETTINGS
# ================================================
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
LOG_LEVEL=info
ENVIRONMENT=production

# ================================================
# URLs AND ENDPOINTS
# ================================================
NEXT_PUBLIC_API_URL=https://omnidash-frontend-PROJECT_ID.a.run.app
NEXTAUTH_URL=https://omnidash-frontend-PROJECT_ID.a.run.app

# ================================================
# DATABASE & BACKEND SERVICES
# ================================================
# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Redis Cache (Optional - for advanced caching)
REDIS_URL=redis://your-redis-instance:6379
REDIS_PASSWORD=your-redis-password

# ================================================
# AI SERVICES
# ================================================
# OpenAI API
OPENAI_API_KEY=sk-proj-your-openai-api-key

# Anthropic API (for Claude AI)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# ================================================
# SOCIAL MEDIA APIs
# ================================================
# Twitter/X API v2
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

# Facebook/Meta Platform
FACEBOOK_ACCESS_TOKEN=your-facebook-page-access-token
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Instagram Business API
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
INSTAGRAM_BUSINESS_ACCOUNT_ID=your-instagram-business-account-id

# LinkedIn API
LINKEDIN_ACCESS_TOKEN=your-linkedin-access-token
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# ================================================
# AUTHENTICATION
# ================================================
# NextAuth Secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-32-character-nextauth-secret

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-google-client-secret

# GitHub OAuth (Optional)
GITHUB_CLIENT_ID=your-github-oauth-app-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ================================================
# EMAIL SERVICES
# ================================================
# SendGrid (Recommended)
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Alternative: Nodemailer SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# ================================================
# ANALYTICS & MONITORING
# ================================================
# Google Analytics 4
GOOGLE_ANALYTICS_ID=G-YOUR-GA4-ID

# Mixpanel (Optional)
MIXPANEL_TOKEN=your-mixpanel-project-token

# Sentry Error Monitoring (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=omnidash-v2

# ================================================
# GOOGLE CLOUD SPECIFIC
# ================================================
# Google Cloud Project
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_REGION=us-central1

# Cloud Storage (Optional)
GOOGLE_CLOUD_STORAGE_BUCKET=omnidash-v2-storage
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# ================================================
# PAYMENT PROCESSING (Optional)
# ================================================
# Stripe
STRIPE_PUBLIC_KEY=pk_live_your-stripe-public-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# ================================================
# SECURITY & RATE LIMITING
# ================================================
# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# CSRF Protection
CSRF_SECRET=your-csrf-secret-key

# ================================================
# FEATURE FLAGS (Optional)
# ================================================
ENABLE_AI_CONTENT_GENERATION=true
ENABLE_SOCIAL_MEDIA_POSTING=true
ENABLE_WORKFLOW_AUTOMATION=true
ENABLE_MULTI_BRAND_MANAGEMENT=true
ENABLE_REAL_TIME_ANALYTICS=true

# ================================================
# PERFORMANCE & OPTIMIZATION
# ================================================
# Image Optimization
ENABLE_IMAGE_OPTIMIZATION=true
IMAGE_OPTIMIZATION_QUALITY=85

# Caching
ENABLE_REDIS_CACHE=true
CACHE_TTL_SECONDS=3600

# ================================================
# DEVELOPMENT & DEBUG (Remove in production)
# ================================================
# Only enable in development/staging environments
DEBUG_MODE=false
VERBOSE_LOGGING=false
ENABLE_DEV_TOOLS=false

# ================================================
# BACKUP & DISASTER RECOVERY
# ================================================
# Database Backup (Optional)
BACKUP_DATABASE_URL=postgresql://backup-connection-string
BACKUP_FREQUENCY_HOURS=24

# ================================================
# COMPLIANCE & LEGAL
# ================================================
# GDPR Compliance
ENABLE_GDPR_COMPLIANCE=true
PRIVACY_POLICY_URL=https://yourdomain.com/privacy
TERMS_OF_SERVICE_URL=https://yourdomain.com/terms

# ================================================
# CUSTOM DOMAIN & SSL
# ================================================
# Custom Domain (Optional)
CUSTOM_DOMAIN=app.yourdomain.com
SSL_CERTIFICATE_PATH=/etc/ssl/certs/omnidash.crt
SSL_PRIVATE_KEY_PATH=/etc/ssl/private/omnidash.key

# ================================================
# NOTES
# ================================================
# 1. Replace all placeholder values with your actual credentials
# 2. Keep this file secure and never commit it to version control
# 3. Use Google Cloud Secret Manager for sensitive values in production
# 4. Test all integrations in staging before deploying to production
# 5. Monitor API usage and quotas to avoid service disruptions
# 6. Rotate credentials regularly for enhanced security