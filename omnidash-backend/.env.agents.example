# Agent System Configuration
# Copy this file to .env and configure the values for your environment

# =====================================
# Agent System Settings
# =====================================

# Enable/disable specific agents
ENABLE_CONTENT_AGENT=true
ENABLE_SCHEDULER_AGENT=true
ENABLE_ABN_AGENT=true
ENABLE_WORKFLOW_AGENT=true
ENABLE_N8N_AGENT=true

# Global agent settings
LOG_LEVEL=info
ENABLE_METRICS=true
ENABLE_TRACING=false

# =====================================
# AI Provider Configuration
# =====================================

# OpenAI Configuration (for ContentCreatorAgent)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic Configuration (for ContentCreatorAgent)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Google AI Configuration (for ContentCreatorAgent)
GOOGLE_API_KEY=your-google-ai-api-key-here

# =====================================
# Social Media Platform Configuration
# =====================================

# Twitter API Configuration (for PostSchedulerAgent)
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret

# Facebook API Configuration (for PostSchedulerAgent)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token

# Instagram API Configuration (for PostSchedulerAgent)
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token

# LinkedIn API Configuration (for PostSchedulerAgent)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_ACCESS_TOKEN=your-linkedin-access-token

# =====================================
# Australian Business Register
# =====================================

# ABR Web Services GUID (for ABNLookupAgent)
# Register at: https://abr.business.gov.au/Tools/WebServices
ABR_GUID=your-abr-web-services-guid

# =====================================
# N8N Integration
# =====================================

# N8N Instance Configuration (for N8NIntegrationAgent)
N8N_BASE_URL=http://localhost:5678
N8N_API_KEY=your-n8n-api-key

# =====================================
# Redis Configuration (for queues)
# =====================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =====================================
# Database Configuration
# =====================================

# Supabase Configuration (for agent state storage)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# =====================================
# Email Configuration (for notifications)
# =====================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# =====================================
# Monitoring and Logging
# =====================================

# Winston Logging Configuration
LOG_DIR=logs

# Sentry Configuration (optional)
SENTRY_DSN=your-sentry-dsn

# =====================================
# Rate Limiting
# =====================================

# Global rate limiting
RATE_LIMIT_MAX_REQUESTS=1000

# Agent-specific rate limits
CONTENT_AGENT_RATE_LIMIT=100
SCHEDULER_AGENT_RATE_LIMIT=50
ABN_AGENT_RATE_LIMIT=1000
WORKFLOW_AGENT_RATE_LIMIT=200
N8N_AGENT_RATE_LIMIT=100

# =====================================
# Security Configuration
# =====================================

# JWT Configuration
JWT_SECRET=your-very-secure-jwt-secret-key
JWT_EXPIRES_IN=24h

# Encryption key for sensitive data
ENCRYPTION_KEY=your-32-character-encryption-key

# =====================================
# Frontend Configuration
# =====================================

FRONTEND_URL=http://localhost:3001

# =====================================
# Development/Testing
# =====================================

# Skip certain validations in development
SKIP_AUTH_IN_DEV=false
ENABLE_DEBUG_ROUTES=true

# Test accounts for development
TEST_TWITTER_ACCOUNT_ID=test-twitter-account-id
TEST_FACEBOOK_PAGE_ID=test-facebook-page-id

# =====================================
# Performance Configuration
# =====================================

# Agent concurrency settings
MAX_CONCURRENT_TASKS_CONTENT=5
MAX_CONCURRENT_TASKS_SCHEDULER=10
MAX_CONCURRENT_TASKS_ABN=20
MAX_CONCURRENT_TASKS_WORKFLOW=10
MAX_CONCURRENT_TASKS_N8N=5

# Task timeout settings (in milliseconds)
TASK_TIMEOUT_CONTENT=60000
TASK_TIMEOUT_SCHEDULER=30000
TASK_TIMEOUT_ABN=10000
TASK_TIMEOUT_WORKFLOW=300000
TASK_TIMEOUT_N8N=120000

# Queue settings
QUEUE_MAX_SIZE=1000
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=5000