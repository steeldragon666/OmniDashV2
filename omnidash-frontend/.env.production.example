# NextAuth Configuration (Required)
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=generate-using-openssl-rand-base64-32

# Encryption Configuration (Required)
ENCRYPTION_KEY=generate-using-openssl-rand-hex-32
ENCRYPTION_SALT=generate-using-openssl-rand-hex-32

# OAuth Providers - Google (PROVIDED CREDENTIALS)
GOOGLE_CLIENT_ID=your-production-google-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_ID=your-production-google-client-id.apps.googleusercontent.com
NEXTAUTH_GOOGLE_CLIENT_ID=your-production-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth Providers - GitHub (Optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# OAuth Providers - Twitter/X (Optional)
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret

# OAuth Providers - Facebook (Optional)
FACEBOOK_CLIENT_ID=your-facebook-app-id
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret

# OAuth Providers - LinkedIn (Optional)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Email Configuration (For password reset)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@your-domain.com

# Monitoring and Analytics (Optional but recommended)
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
SENTRY_DSN=your-sentry-dsn-here
DATADOG_API_KEY=your-datadog-api-key

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Security Headers
CSP_ENABLED=true
HSTS_ENABLED=true
X_FRAME_OPTIONS=DENY

# Database Connection (if using direct connection)
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://user:password@host:port
REDIS_TLS_ENABLED=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DESTINATION=file
LOG_FILE_PATH=/var/log/omnidash/app.log

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Feature Flags
FEATURE_SOCIAL_POSTING=true
FEATURE_WORKFLOW_AUTOMATION=true
FEATURE_AI_ASSISTANT=true
FEATURE_ANALYTICS_DASHBOARD=true

# API Keys for Integrations
OPENAI_API_KEY=sk-your-openai-api-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# CDN Configuration
CDN_URL=https://cdn.your-domain.com
STATIC_ASSETS_URL=https://static.your-domain.com

# WebSocket Configuration
WS_URL=wss://ws.your-domain.com
WS_AUTH_REQUIRED=true
WS_SSL_CERT_PATH=/etc/ssl/certs/your-cert.pem
WS_SSL_KEY_PATH=/etc/ssl/private/your-key.pem

# Deployment Configuration
DEPLOY_REGION=us-east-1
DEPLOY_ENVIRONMENT=production
HEALTH_CHECK_PATH=/api/health
READINESS_CHECK_PATH=/api/ready