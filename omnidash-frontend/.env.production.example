# Production Environment Variables for OmniDash Platform
# Copy this file to .env.production and fill in your actual values
# NEVER commit .env.production to version control

# =============================================================================
# CRITICAL: Generate secure keys using the following commands:
# =============================================================================
# NEXTAUTH_SECRET: openssl rand -base64 32
# ENCRYPTION_KEY: openssl rand -hex 32
# ENCRYPTION_SALT: openssl rand -hex 32
# =============================================================================

# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_API_URL=https://api.your-domain.com
NEXT_PUBLIC_BACKEND_URL=https://backend.your-domain.com

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# NextAuth Configuration (Required)
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=generate-using-openssl-rand-base64-32

# Encryption Configuration (Required)
ENCRYPTION_KEY=generate-using-openssl-rand-hex-32
ENCRYPTION_SALT=generate-using-openssl-rand-hex-32

# OAuth Providers - Google (Recommended for production)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth Providers - GitHub (Optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# OAuth Providers - Twitter/X (Optional)
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret

# OAuth Providers - Facebook (Optional)
FACEBOOK_CLIENT_ID=your-facebook-app-id
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret

# OAuth Providers - LinkedIn (Optional)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Email Configuration (For password reset)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@your-domain.com

# Monitoring and Analytics (Optional but recommended)
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
SENTRY_DSN=your-sentry-dsn-here
DATADOG_API_KEY=your-datadog-api-key

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Security Headers
CSP_ENABLED=true
HSTS_ENABLED=true
X_FRAME_OPTIONS=DENY

# Database Connection (if using direct connection)
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://user:password@host:port
REDIS_TLS_ENABLED=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DESTINATION=file
LOG_FILE_PATH=/var/log/omnidash/app.log

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Feature Flags
FEATURE_SOCIAL_POSTING=true
FEATURE_WORKFLOW_AUTOMATION=true
FEATURE_AI_ASSISTANT=true
FEATURE_ANALYTICS_DASHBOARD=true

# =============================================================================
# ðŸ”‘ GOOGLE CLOUD PLATFORM - COMPLETE INTEGRATION
# =============================================================================
# Google Cloud Core Configuration
GOOGLE_APPLICATION_CREDENTIALS=./config/google-service-account.json
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_REGION=us-central1
GCP_LOCATION=us-central1

# BigQuery Data Warehouse
BIGQUERY_DATASET_ID=omnidash_analytics
BIGQUERY_TABLE_PREFIX=omnidash_
BIGQUERY_LOCATION=us-central1

# Cloud Storage
GOOGLE_CLOUD_STORAGE_BUCKET=omnidash-storage-prod
